<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6">

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/text_view_total_score"/>

    <sn.zapp.util.ZappCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        style="@style/ZappCardView"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="@dimen/cardview_height_score"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="50dp"-->

            <ImageView
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1.2"
                android:src="@drawable/ic_add_circle_white_48dp" />
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/zapplogo"/>-->

            <TextView
                android:id="@+id/content_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:text="Klingeling"
                android:gravity="center"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/buttonMinus"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1.2"
                android:src="@drawable/ic_delete_white_48dp" />
        </LinearLayout>
    </sn.zapp.util.ZappCardView>
</LinearLayout>
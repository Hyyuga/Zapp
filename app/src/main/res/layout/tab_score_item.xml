<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_vertical"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/left_arrow"/>
        <TextView
            android:id="@+id/text_view_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="1"/>
    </LinearLayout>

    <sn.zapp.util.ZappCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        style="@style/ZappCardView"
        android:layout_width="0dp"
        android:layout_height="@dimen/cardview_height_score"
        android:layout_weight="5"
        android:clickable="true"
        android:focusable="true"
        android:foreground="@drawable/custom_bg">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="6">

            <!--<ImageView-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="50dp"-->

            <ImageView
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1.2"
                android:src="@drawable/ic_add_circle_white_48dp" />
            <!--android:layout_weight="1"-->
            <!--android:layout_gravity="center"-->
            <!--android:src="@drawable/zapplogo"/>-->

            <TextView
                android:id="@+id/content_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.6"
                android:gravity="center"
                android:text="Klingeling"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/buttonMinus"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1.2"
                android:src="@drawable/ic_delete_white_48dp" />
        </LinearLayout>
    </sn.zapp.util.ZappCardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="22dp"
    android:weightSum="10">

    <!--<ImageView-->
    <!--android:layout_width="0dp"-->
    <!--android:layout_height="50dp"-->
    <!--android:layout_gravity="center"-->
    <!--android:layout_weight="1"-->
    <!--android:src="@drawable/zapplogo" />-->
    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/content_header_penalty"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_penalty_header"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Penalties"
        android:textSize="@dimen/member_list_text_fontsize" />
    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@android:color/black" />
    <TextView
        android:id="@+id/content_header_amount"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin_penalty_header"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/member_list_text_fontsize" />
    <View
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@android:color/black" />
</LinearLayout>